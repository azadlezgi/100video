function statuscomp($table, $row, $id) {
  if (($table) && ($row)) {
    $result_sc = dbquery("SELECT 
                    ". $row ."_status
            FROM ". $table ."
            WHERE ". $row ."_id='". $id ."'
            AND ". $row ."_date<'". FUSION_TODAY ."'");
    if (dbrows($result_sc)) {
      $data_sc = dbarray($result_sc);
      return $data_sc[$row .'_status'];
    } else {
      return false;
    }
  } else {
    return true;
  }
} // function statuscomp

